<% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
<% end  %>

<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <%= f.submit%>
<% end %>