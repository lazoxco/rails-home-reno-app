</div>

<div class="row">
  <% @tasks.each do |task| %>
    <h3><%= task.name %></h3>
    <p><%= task.description %></p>
    <%= link_to "View Project", task_path(task), class: "btn btn-primary", method: :get %>
      <% if user_signed_in? && task.user.id == current_user.id %>
        <%= link_to "Edit Project", edit_task_path(task), class: "btn btn-outline-secondary", method: :get %>
        <%= link_to "Delete Project", task_path(task), class: "btn btn-danger", method: :delete %>
      <% end %>
    <hr>
  <% end %>
  <%= button_to "Create a Project", new_task_path, class: "btn btn-success", method: :get %>
</div>