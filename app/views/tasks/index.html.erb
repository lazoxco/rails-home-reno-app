<div class="row">
<h1>The app for DIY and home improvement enthusiasts.</h1>
<hr>
</div>
<div class="row">
  <% @tasks.each do |task| %>
    <h4><%= task.name %></h4>
    <p><%= task.description %></p>
    <%= link_to "View Task", task_path(task), class: "btn btn-primary", method: :get %>
      <% if user_signed_in? && task.user.id == current_user.id %>
        <%= link_to "Edit Task", edit_task_path(task), class: "btn btn-outline-secondary", method: :get %>
        <%= link_to "Delete Task", task_path(task), class: "btn btn-danger", method: :delete %>
      <% end %>
    <hr>
  <% end %>
  <%= button_to "Create a Task", new_task_path, class: "btn btn-success", method: :get %>
</div>